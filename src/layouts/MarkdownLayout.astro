--- 
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
// 1. The frontmatter prop gives access to frontmatter and other data
const { frontmatter } = Astro.props;
---
<html lang="zh">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta author={frontmatter.author}/>
    <meta keywords={frontmatter.keywords} />
    <meta description={frontmatter.description} />
    <link rel="icon" type="image/svg+xml" href="https://afoo.me/favicon.svg">
    <title>{frontmatter.title}</title>
    <script src="https://unpkg.com/htmx.org@1.9.5"></script>
    <ViewTransitions/>
  </head>
  <body>
  	<nav>
  		<a href="/">Home</a>
  		<a href="https://afoo.me">Author</a>
  		<a href="https://edu.afoo.me">AI Courses</a>
  		<a href="https://store.afoo.me">Fuqiang Store</a>
	  </nav>
    <main>
      <div style="color:gray; font-size: x-small">{frontmatter.date.substring(0,10)}</div>
      <slot/>
    </main>
    <div hx-get="https://toolfooter.afoo.me/" hx-trigger="revealed"/>
    <footer>
      <img src="data:image/png;base64,"  style="width: 100%;">
      <p align="center">Copyright Â© 2023 - <a href="https://afoo.me">Fuqiang Wang</a> All Rights Reserved.</p>
      <p align="center">
        <a href="https://x.com/fujohnwang"><svg viewBox="0 0 24 24" width="2rem" height="2rem" astro-icon="tabler:brand-twitter">
        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 4.01c-1 .49-1.98.689-3 .99-1.121-1.265-2.783-1.335-4.38-.737S11.977 6.323 12 8v1c-3.245.083-6.135-1.395-8-4 0 0-4.182 7.433 4 11-1.872 1.247-3.739 2.088-6 2 3.308 1.803 6.913 2.423 10.034 1.517 3.58-1.04 6.522-3.723 7.651-7.742a13.84 13.84 0 0 0 .497-3.753C20.18 7.773 21.692 5.25 22 4.009z">
        </path>
        </svg>
        @fujohnwang</a>
      </p>
    </footer>
  </body>
</html>
